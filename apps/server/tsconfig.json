{
  "extends": ["@repo/typescript-config/base.json"],
  "compilerOptions": {
    "module": "nodenext",
    "moduleResolution": "nodenext",

    "rootDir": "src",
    "outDir": "dist",

    "strict": true,
    "sourceMap": true,

    "strictPropertyInitialization": false,

    "emitDecoratorMetadata": true,
    "experimentalDecorators": true
  },
  "include": ["src"],
  "exclude": ["dist"]
}
